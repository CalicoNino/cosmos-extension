{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./*"],
      "react": ["../../node_modules/@types/react"]
    },
    "strict": false
  },
  "include": ["src", "src/types/custom.d.ts"],
  "exclude": ["node_modules", "../../node_modules", ".yalc"]
}
